<h1>Listing Moves</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.name %></td>
        <td><%= move.description %></td>
        <td><%= render partial: 'types/type', locals: { type: move.type } %></td>
        <td><%= link_to 'Afficher', move, class: 'btn btn-info' %></td>
        <td><%= link_to 'Editer', edit_move_path(move), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', move, method: :delete, data: { confirm: 'Really ?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

