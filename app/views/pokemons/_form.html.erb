<%= simple_form_for @pokemon do |f| %>
    <div class="row">
        <div class="form-group col-lg-6">
                <%= f.input :name,label:'Nom',class: 'form-control' %> 
        </div>
        <div class="form-group col-lg-6">
                <%= f.association :type, label:'Type',class: 'form-control' %> 
        </div>
        <div class="form-group col-lg-6">
                <%= f.input :number, label:'NumÃ©ro',class: 'form-control' %> 
        </div>
        <div class="form-group col-lg-6">
                <%= f.input :level, label:'Niveau',class: 'form-control' %> 
        </div>
        <div class="form-group col-lg-6">
                <%= f.input :health_points,label:'PV',class: 'form-control' %> 
